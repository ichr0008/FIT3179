{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
        "text": "Active cases against vaccination rate"
    },
    "data": {
        "url": "https://raw.githubusercontent.com/ichr0008/FIT3179/main/ASS2/dataset/COVID_AU_cumulative.csv"
    },
    "datasets": {
        "line_date": [
            {"x": "2021-02-22"},
            {"x": "2021-06-08"},
            {"x": "2021-08-30"}
        ],
        "line_text": [
            {"x": "2021-02-22", "y": 10, "labels": "Vaccines first become available"},
            {"x": "2021-06-08", "y": 25, "labels": "Vaccines available for 40 and above"},
            {"x": "2021-08-30", "y": 40, "labels": "Vaccines available for 16 to 39"}
        ]
    },
    "params": [
        {
            "name": "state_select",
            "value": "NA",
            "bind": {
                "input": "select",
                "options": [
                    "NA",
                    "Australian Capital Territory",
                    "New South Wales",
                    "Northern Territory",
                    "Queensland",
                    "South Australia",
                    "Tasmania",
                    "Victoria",
                    "Western Australia"
                ],
                "labels": [
                    "Show all",
                    "ACT",
                    "NSW",
                    "NT",
                    "QLD",
                    "SA",
                    "TAS",
                    "VIC",
                    "WA"
                ],
                "name": "State Selection: "
            }
        }
    ],
    "transform": [
        {
            "calculate": "timeParse(datum['date_str'], '%d/%m/%Y')",
            "as": "new_date"
        },
        {
            "filter": "datum.state == state_select"
        },
        {
            "calculate": "datum.vaccines/datum.population * 50",
            "as": "prop_vaxxed"
        }
    ],
    "vconcat": [
        {
            "width": 500,
            "height": 200,
            "mark": {
                "type": "line",
                "color": "red"
            },
            "encoding": {
                "x": {
                    "field": "new_date", 
                    "type": "temporal", 
                    "title": "",
                    "timeUnit": "yearmonthdate"
                },
                "y": {
                    "field": "active", 
                    "type": "quantitative",
                    "title": "Active cases"
                },
                "tooltip": [
                    {
                        "field": "active",
                        "type": "quantitative",
                        "title": "Active cases",
                        "format": ","
                    },
                    {
                        "field": "new_date", 
                        "type": "temporal", 
                        "title": "Date",
                        "timeUnit": "yearmonthdate"
                    }
                ]
            }
        },
        {
            "width": 500,
            "height": 200,
            "layer": [
                {
                    "mark": {
                        "type": "line",
                        "color": "orange"
                    },
                    "encoding": {
                        "x": {
                            "field": "new_date", 
                            "type": "temporal", 
                            "title": "Date",
                            "timeUnit": "yearmonthdate"
                        },
                        "y": {
                            "field": "prop_vaxxed", 
                            "type": "quantitative",
                            "title": "Double vaccinaton rate (%)"
                        },
                        "tooltip": [
                            {
                                "field": "prop_vaxxed",
                                "type": "quantitative",
                                "title": "Double vaccinaton rate (%)",
                                "format": ".1f"
                            },
                            {
                                "field": "new_date", 
                                "type": "temporal", 
                                "title": "Date",
                                "timeUnit": "yearmonthdate"
                            }
                        ]
                    }
                },
                {
                    "data": {
                        "name": "line_date"
                    },
                    "mark": {
                        "type": "rule",
                        "strokeDash": [8, 4],
                        "opacity": 0.5
                    },
                    "encoding": {
                        "x": {
                            "type": "temporal", 
                            "field": "x"
                        }
                    }
                },
                {
                    "data": {"name": "line_text"},
                    "mark": {
                        "type": "text", 
                        "align": "right", 
                        "dx": -5
                    },
                    "encoding": {
                        "x": {
                            "type": "temporal", 
                            "field": "x"
                        },
                        "y": {
                            "type": "quantitative", 
                            "field": "y"
                        },
                        "text": {"type": "nominal", "field": "labels"}
                    }
                }
            ]
            
        }
    ]
}
