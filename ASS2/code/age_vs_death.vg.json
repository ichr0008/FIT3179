{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 400,
    "data": {
        "url": "https://raw.githubusercontent.com/ichr0008/FIT3179/main/ASS2/dataset/COVID_AU_deaths.csv"
    },
    "params": [
        {
            "name": "state_select",
            "value": null,
            "bind": {
                "input": "select",
                "options": [
                    null,
                    "ACT",
                    "NSW",
                    "NT",
                    "QLD",
                    "SA",
                    "TAS",
                    "VIC",
                    "WA"
                ],
                "labels": [
                    "Show all",
                    "ACT",
                    "NSW",
                    "NT",
                    "QLD",
                    "SA",
                    "TAS",
                    "VIC",
                    "WA"
                ],
                "name": "State Selection: "
            }
        }
    ],
    "transform": [
        {
            "calculate": "timeParse(datum['date_str'], '%d/%m/%Y')",
            "as": "new_date"
        },
        {
            "filter": "state_select == null || state_select == datum.state"
        }
    ],
    "title": {
        "text": "COVID-19 Deaths by Age Bracket"
    },
    "layer": [
        {
            "params": [
                {
                    "name": "brush",
                    "select": {"type": "interval", "encodings": ["x"]}
                }
            ],
            "mark": {
                "type": "bar",
                "cornerRadiusTopLeft": 3, 
                "cornerRadiusTopRight": 3
            },
            "encoding": {
                "x": {
                    "field": "new_date", 
                    "type": "temporal",
                    "timeUnit": "yearmonth"
                },
                "y": {
                    "aggregate": "count", 
                    "field": "date"
                },
                "color": {"value": "orange"},
                "tooltip": [
                    {
                        "field": "new_date",
                        "type": "temporal",
                        "title": "Date",
                        "timeUnit": "yearmonth"
                    },
                    {
                        "field": "age_bracket",
                        "type": "ordinal",
                        "title": "Age bracket"
                    },
                    {
                        "aggregate": "count",
                        "field": "date",
                        "title": "Number of deaths"
                    }
                ]
            }
        },
        {
            "transform": [{"filter": {"param": "brush"}}],
            "mark": {
                "type": "bar",
                "cornerRadiusTopLeft": 3, 
                "cornerRadiusTopRight": 3
            },
            "encoding": {
                "x": {
                    "field": "new_date",
                    "type": "temporal",
                    "title": "Date",
                    "timeUnit": "yearmonth",
                    "axis": {
                        "tickCount": 20,
                        "grid": false
                    }
                },
                "y": {
                    "aggregate": "count",
                    "field": "date",
                    "title": "Number of deaths"
                },
                "color": {
                    "field": "age_bracket_reduced",
                    "type": "ordinal",
                    "title": "Age bracket",
                    "scale": {
                        "domain": [
                            "<60",
                            "60-69",
                            "70-79",
                            "80-89",
                            "90-99",
                            "100-109"
                        ],
                        "range": [
                            "#fed976",
                            "#feb24c",
                            "#fd8d3c",
                            "#fc4e2a",
                            "#e31a1c",
                            "#b10026"
                        ]
                    }
                },
                "order": {
                    "field": "ordering"
                },
                "tooltip": [
                    {
                        "field": "new_date",
                        "type": "temporal",
                        "title": "Date",
                        "timeUnit": "yearmonth"
                    },
                    {
                        "field": "age_bracket",
                        "type": "ordinal",
                        "title": "Age bracket"
                    },
                    {
                        "aggregate": "count",
                        "field": "date",
                        "title": "Number of deaths"
                    }
                ]
            }
        }
    ]
}
