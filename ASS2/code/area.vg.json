{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {"url": "https://raw.githubusercontent.com/ichr0008/FIT3179/main/ASS2/dataset/state.csv"},
    "params": [
        {
            "name": "state_select",
            "value": "ACT",
            "bind": {
                "input": "select",
                "options": [
                    "ACT",
                    "NSW",
                    "NT",
                    "QLD",
                    "SA",
                    "TAS",
                    "VIC",
                    "WA"
                ],
                "labels": [
                    "ACT",
                    "NSW",
                    "NT",
                    "QLD",
                    "SA",
                    "TAS",
                    "VIC",
                    "WA"
                ],
                "name": "State Selection: "
            }
        }
    ],
    "transform": [
        {
            "calculate": "timeParse(datum['date_str'], '%d/%m/%Y')",
            "as": "new_date"
        },
        {
            "filter": "state_select == null || state_select == datum.state_abbrev"
        }
    ],
    "vconcat": [
        {
            "width": 500,
            "height": 100,
            "mark": {
                "type": "area",
                "color": "red"
            },
            "encoding": {
                "x": {
                    "field": "new_date",
                    "type": "temporal",
                    "title": "",
                    "timeUnit": "yearmonthdate",
                    "axis": {"grid": false}
                },
                "y": {
                    "field": "hosp_cum",
                    "type": "quantitative",
                    "title": "Hospital",
                    "axis": {"grid": false}
                },
                "tooltip": [
                    {
                        "field": "new_date",
                        "type": "temporal",
                        "title": "Date",
                        "timeUnit": "yearmonthdate"
                    },
                    {
                        "field": "hosp_cum",
                        "type": "quantitative",
                        "title": "Hospital"
                    }
                ]
            }   
        },
        {
            "width": 500,
            "height": 100,
            "mark": {
                "type": "area",
                "color": "orange"
            },
            "encoding": {
                "x": {
                    "field": "new_date",
                    "type": "temporal",
                    "title": "",
                    "timeUnit": "yearmonthdate",
                    "axis": {"grid": false}
                },
                "y": {
                    "field": "icu_cum",
                    "type": "quantitative",
                    "title": "ICU",
                    "axis": {"grid": false}
                },
                "tooltip": [
                    {
                        "field": "new_date",
                        "type": "temporal",
                        "title": "Date",
                        "timeUnit": "yearmonthdate"
                    },
                    {
                        "field": "icu_cum",
                        "type": "quantitative",
                        "title": "ICU"
                    }
                ]
            }   
        },
        {
            "width": 500,
            "height": 100,
            "mark": {
                "type": "area",
                "color": "purple"
            },
            "encoding": {
                "x": {
                    "field": "new_date",
                    "type": "temporal",
                    "title": "Time",
                    "timeUnit": "yearmonthdate",
                    "axis": {"grid": false}
                },
                "y": {
                    "field": "vent_cum",
                    "type": "quantitative",
                    "title": "Ventilator",
                    "axis": {"grid": false}
                },
                "tooltip": [
                    {
                        "field": "new_date",
                        "type": "temporal",
                        "title": "Date",
                        "timeUnit": "yearmonthdate"
                    },
                    {
                        "field": "vent_cum",
                        "type": "quantitative",
                        "title": "Ventilator"
                    }
                ]
            }   
        }
    ]
}
