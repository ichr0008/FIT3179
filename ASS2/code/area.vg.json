{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {"url": "https://raw.githubusercontent.com/ichr0008/FIT3179/main/ASS2/dataset/severities.csv"},
    "title": {
        "text": "Severity of Symptoms State",
        "subtitle": " (Jan 2020 - Sept 2021)"
    },
    "params": [
        {
            "name": "state_select",
            "value": "NA",
            "bind": {
                "input": "select",
                "options": [
                    "NA",
                    "Australian Capital Territory",
                    "New South Wales",
                    "Northern Territory",
                    "Queensland",
                    "South Australia",
                    "Tasmania",
                    "Victoria",
                    "Western Australia"
                ],
                "labels": [
                    "Show all",
                    "ACT",
                    "NSW",
                    "NT",
                    "QLD",
                    "SA",
                    "TAS",
                    "VIC",
                    "WA"
                ],
                "name": "State selection: "
            }
        }
    ],
    "transform": [
        {
            "filter": "state_select == null || state_select == datum.state"
        },
        {
            "calculate": "if(datum.attribute == 'Hospital', 0, if(datum.attribute === 'ICU', 1, 2))",
            "as": "severityOrder"
        }
    ],
    "vconcat": [
        {
            "width": 500,
            "height": 250,
            "transform": [
                {"filter": {"param": "brush"}}
            ],
            "mark": {
                "type": "area"
            },
            "encoding": {
                "x": {
                    "field": "date_us",
                    "type": "temporal",
                    "title": "",
                    "axis": {
                        "format": "%b %Y"
                    }
                },
                "y": {
                    "aggregate": "sum",
                    "field": "value",
                    "type": "quantitative",
                    "title": "Count"
                },
                "color": {
                    "field": "attribute",
                    "scale": {
                        "domain": ["Hospital", "ICU", "Ventilator"],
                        "range": ["#ffeda0", "#feb24c", "#f03b20"]
                    },
                    "title": "Severity",
                    "legend": {
                        "orient": "none",
                        "legendX": 20,
                        "legendY": 20
                    }
                },
                "order": {
                    "field": "severityOrder"
                },
                "tooltip": [
                    {
                        "field": "date_us",
                        "type": "temporal",
                        "title": "Date"
                    },
                    {
                        "aggregate": "sum",
                        "field": "value",
                        "type": "quantitative",
                        "title": "count",
                        "format": ","
                    },
                    {
                        "field": "attribute",
                        "title": "Severity"
                    }
                ]
            }
        },
        {
            "width": 500,
            "height": 80,
            "mark": {
                "type": "area"
            },
            "params": [
                {
                    "name": "brush",
                    "select": {
                        "type": "interval", 
                        "encodings": ["x"]
                    }
                }
            ],
            "encoding": {
                "x": {
                    "field": "date_us",
                    "type": "temporal",
                    "title": "Date",
                    "axis": {
                        "format": "%b %Y",
                        "tickCount": 6
                    }
                },
                "y": {
                    "aggregate": "sum",
                    "field": "value",
                    "type": "quantitative",
                    "title": "Count"
                },
                "color": {
                    "field": "attribute",
                    "scale": {
                        "domain": ["Hospital", "ICU", "Ventilator"],
                        "range": ["#ffeda0", "#feb24c", "#f03b20"]
                    }
                },
                "order": {
                    "field": "severityOrder"
                },
                "tooltip": [
                    {
                        "field": "date_us",
                        "type": "temporal",
                        "title": "Date"
                    },
                    {
                        "aggregate": "sum",
                        "field": "value",
                        "type": "quantitative",
                        "title": "count",
                        "format": ","
                    },
                    {
                        "field": "attribute",
                        "title": "Severity"
                    }
                ]
            }
        }
    ]
}
