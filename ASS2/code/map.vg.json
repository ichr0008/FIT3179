{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
        "text": "Active Cases by State"
    },
    "data": {
        "url": "https://raw.githubusercontent.com/ichr0008/FIT3179/main/ASS2/dataset/state.csv"
    },
    "transform": [
        {
            "lookup": "state",
            "from": {
                "data": {
                    "url": "https://raw.githubusercontent.com/ichr0008/FIT3179/main/ASS2/code/aus.topo.json",
                    "format": {
                        "type": "topojson", 
                        "feature": "australian-states"
                    }
                },
                "key": "properties.STATE_NAME"
            },
            "as": "geo"
        },
        {
            "calculate": "(datum.active + 0.1)/10",
            "as": "Active cases"
        }
    ],
    "vconcat": [
        {
            "width": 400,
            "height": 350,
            "transform": [
                {"filter": {"param": "brush"}}
            ],
            "params": [
                {
                    "name": "highlight",
                    "select": {
                        "type": "point"
                    }
                }
            ],
            "projection": {
                "type": "equirectangular"
            },
            "mark": {
                "type": "geoshape"
            },
            "encoding": {
                "shape": {
                    "field": "geo",
                    "type": "geojson"
                },
                "color": {
                    "field": "Active cases",
                    "type": "quantitative",
                    "scale": {
                        "type": "log",
                        "scheme": "reds"
                    }
                },
                "stroke": {
                    "condition": {
                            "param": "highlight",
                            "empty": false,
                            "value": "black"
                        },
                    "value": null
                },
                "opacity":{
                    "condition": {"param": "highlight", "value": 1},
                    "value": 0.5
                },
                "order": {"condition": {"param": "highlight", "value": 1}, "value": 0},
                "tooltip": [
                    {
                        "field": "state",
                        "type": "nominal",
                        "title": "State"
                    },
                    {
                        "field": "Active cases",
                        "type": "quantitative",
                        "format": ",.0f"
                    },
                    {
                        "field": "date_us",
                        "type": "temporal",
                        "title": "Date"
                    }
                    
                ]
            }
        },
        {
            "width": 400,
            "height": 50,
            "mark": {
                "type": "line",
                "color": "red"
            },
            "params": [
                {
                    "name": "brush",
                    "select": {
                        "type": "interval", 
                        "encodings": ["x"]
                    }
                }
            ],
            "encoding": {
                "x": {
                    "field": "date_us",
                    "type": "temporal",
                    "title": "Date",
                    "axis": {
                        "format": "%b %Y"
                    }
                },
                "y": {
                    "aggregate": "sum",
                    "field": "Active cases",
                    "type": "quantitative",
                    "axis": {
                        "tickCount": 3
                    },
                    "scale": {
                        "type": "log"
                    },
                    "title": "Total Active Cases"
                }
            }
        }
    ]
}