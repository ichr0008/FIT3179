{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
        "text": "Title here"
    },
    "data": {
        "url": "https://raw.githubusercontent.com/ichr0008/FIT3179/main/ASS2/state.csv"
    },
    "params": [
        {
            "name": "state_select",
            "value": "ACT",
            "bind": {
                "input": "select",
                "options": [
                    "ACT",
                    "NSW",
                    "NT",
                    "QLD",
                    "SA",
                    "TAS",
                    "VIC",
                    "WA"
                ],
                "labels": [
                    "ACT",
                    "NSW",
                    "NT",
                    "QLD",
                    "SA",
                    "TAS",
                    "VIC",
                    "WA"
                ],
                "name": "State Selection: "
            }
        }
    ],
    "transform": [
        {
            "calculate": "timeParse(datum['date_str'], '%d/%m/%Y')",
            "as": "new_date"
        },
        {
            "filter": "state_select == null || state_select == datum.state_abbrev"
        },
        {
            "calculate": "datum.hosp_cum",
            "as": "Hospitalised"
        },
        {
            "calculate": "datum.icu_cum",
            "as": "Intensive Care Unit" 
        },
        {
            "calculate": "datum.vent_cum",
            "as": "Ventilator"
        }
    ],
    "repeat": {
        "layer": ["Hospitalised", "Intensive Care Unit", "Ventilator"]
    },
    "spec": {
        "mark": {
            "type": "line"
        },
        "width": 500,
        "height": 400,
        "encoding": {
            "x": {
                "field": "new_date",
                "type": "temporal",
                "title": "Date",
                "timeUnit": "yearmonthdate"
            },
            "y": {
                "field": { "repeat": "layer" },
                "type": "quantitative"
            },
            "color": {
                "datum": { "repeat": "layer" },
                "scale": {
                    "range": ["red", "orange", "purple"]
                }
            },
            "tooltip": [
                {
                    "field": "new_date",
                    "type": "temporal",
                    "title": "Date",
                    "timeUnit": "yearmonthdate"
                },
                {
                    "field": { "repeat": "layer" }
                }
            ]
        }
    }
}